<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_berry_guide"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.afemsc.beeren.BerryGuide">

    <Button
        android:text="12.12.2012"
        android:textSize="16sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_guide_datepicker"
        android:drawableLeft="@drawable/ic_date_range_black_18dp"
        android:background="@android:color/transparent" />

    <TextView
        android:text="TextView"
        android:layout_marginLeft="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textBerrySize"
        android:layout_below="@+id/seekBarBerrySize"
        android:layout_alignParentStart="true" />


    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarBerrySize"
        android:max="100"
        android:layout_below="@+id/spinner_vegetation"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="0dp"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/simpleSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_guide_colourpicker"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/circle_colour_pick"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/circle_c2"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="10dp"
        android:layout_alignTop="@+id/button_guide_colourpicker"
        android:layout_alignEnd="@+id/button_guide_colourpicker" />

    <Button
        android:text="Pick Colour"
        android:textSize="16sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:id="@+id/button_guide_colourpicker"
        android:textAlignment="viewStart"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        android:layout_below="@+id/button_guide_datepicker"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/spinner_vegetation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/simpleSpinner"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true" />


    <Button
        android:text="Search"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:id="@+id/button_guide_result"
        android:drawableRight="@drawable/ic_send_white_18dp2"
        android:layout_marginTop="71dp"
        android:layout_below="@+id/textBerrySize"
        android:layout_centerHorizontal="true" />


</RelativeLayout>