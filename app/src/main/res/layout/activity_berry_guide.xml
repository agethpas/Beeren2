<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_berry_guide"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.afemsc.beeren.BerryGuide">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_berry_guide_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textBerrySize"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.afemsc.beeren.BerryDirectory">


            <ListView
                android:id="@+id/ListBerryGuide"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>


        </LinearLayout>

    <Button
        android:text="12.12.2012"
        android:textSize="16sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_guide_datepicker"
        android:drawableLeft="@drawable/ic_date_range_black_18dp"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/button_guide_colourpicker" />


    <TextView
        android:text="TextView"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textBerrySize"
        android:layout_below="@+id/seekBarBerrySize"
        android:layout_alignParentStart="true" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarBerrySize"
        android:max="100"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/simpleSpinner"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Pick Colour"
        android:textSize="16sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:id="@+id/button_guide_colourpicker"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="viewStart" />

    <ImageView
        android:id="@+id/circle_colour_pick"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/circle_c2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="4dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:id="@+id/simpleSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_guide_datepicker"
        android:layout_alignParentStart="true" />


</RelativeLayout>